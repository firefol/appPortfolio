<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="borderColor" format="color"/>
    <attr name="headerColor" format="color"/>
    <attr name="hintColor" format="color"/>
    <attr name="textColor" format="color"/>
    <attr name="hint" format="string"/>
    <attr name="text" format="string"/>
    <attr name="header" format="string"/>
    <attr name="textSize" format="dimension"/>

    <attr name="textType" format="enum">
        <enum name="name" value="0"/>
        <enum name="number" value="1"/>
        <enum name="password" value="2"/>
        <enum name="text" value="3"/>
        <enum name="date" value="4"/>
    </attr>

    <declare-styleable name="GroupBoxView">
        <attr name="borderColor"/>
        <attr name="headerColor"/>
        <attr name="header"/>
        <attr name="disableHeader" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="EditBoxView">
        <attr name="hint"/>
        <attr name="text"/>
        <attr name="textType"/>
        <attr name="borderColor"/>
        <attr name="hintColor"/>
        <attr name="textColor"/>
        <attr name="textSize"/>
        <attr name="maxLength" format="integer"/>
        <attr name="readOnly" format="boolean"/>
    </declare-styleable>
</resources>